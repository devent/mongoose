<shortcuts>
    <skipIfNotSupported />
    <programGroup defaultName="${project.name} ${project.version}"
        location="startMenu" />
    <shortcut
       name="Start ${project.name}"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="yes"
     startup="no"
     target="$INSTALL_PATH\bin\windows\run.bat"
     commandLine=""
     workingDirectory="$INSTALL_PATH\bin\windows"
     description="Start ${project.name}. ${project.description}"
     type="Application"
     encoding="UTF-8"
     terminal="false"
     KdeSubstUID="false"
     initialState="normal"
     iconFile="$INSTALL_PATH\etc\\${project.custom.icon.windows}">
        <createForPack name="Windows run files" />
    </shortcut>
    <shortcut
       name="Debug Mode ${project.name}"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="yes"
     startup="no"
     target="$INSTALL_PATH\bin\windows\debug-run.bat"
     commandLine=""
     workingDirectory="$INSTALL_PATH\bin\windows"
     description="Start debug mode of ${project.name}. ${project.description}"
     type="Application"
     encoding="UTF-8"
     terminal="true"
     KdeSubstUID="false"
     initialState="normal"
     iconFile="$INSTALL_PATH\etc\\${project.custom.icon.windows}">
        <createForPack name="Windows run files" />
    </shortcut>
    <shortcut
       name="Readme file"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="yes"
     startup="no"
     target="$INSTALL_PATH\doc\en\readme.txt"
     commandLine=""
     workingDirectory="$INSTALL_PATH\doc\en"
     description="${project.name} readme file"
     type="Link"
     encoding="UTF-8">
        <createForPack name="Doc-English" />
    </shortcut>
    <shortcut
       name="Liemich Datei"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="yes"
     startup="no"
     target="$INSTALL_PATH\doc\de\readme.txt"
     commandLine=""
     workingDirectory="$INSTALL_PATH\doc\de"
     description="${project.name} liesmich Datei"
     type="Link"
     encoding="UTF-8">
        <createForPack name="Doc-Deutsch" />
    </shortcut>
</shortcuts>
