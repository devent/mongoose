	<artifactId>groovybash-cliapp</artifactId>
	<groupId>com.anrisoftware.groovybash</groupId>
	<version>1.0-SNAPSHOT</version>
	<name>Groovybash CLI Application</name>

    <properties>
        <project.custom.mainclass>com.anrisoftware.groovybash.application.Start</project.custom.mainclass>
        <project.custom.author.name>Erwin Müller</project.custom.author.name>
        <project.custom.author.email>erwin.mueller@deventm.org</project.custom.author.email>
    </properties>
    
	<developers>
		<developer>
			<id>EM</id>
			<name>Erwin Müller</name>
			<organization>Advanced Natural Research Insitute GmbH</organization>
			<email>erwin.mueller@deventm.org</email>
			<roles>
				<role>Owner</role>
				<role>Developer</role>
			</roles>
		</developer>
	</developers>

	<licenses>
		<license>
			<name>GPLv3</name>
			<url>http://www.gnu.org/licenses/gpl.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<scm>
		<connection>scm:git:${custom.gitpublic.url}groovybash.git</connection>
		<developerConnection>scm:git:${custom.gitpublic.url}groovybash.git</developerConnection>
		<url>scm:git:${custom.gitpublic.url}groovybash.git</url>
	</scm>

	<distributionManagement>
		<repository>
			<id>${custom.repository.anrispublic.id}</id>
			<url>${custom.repository.root}${custom.repository.anrispublic.path}</url>
		</repository>
		<snapshotRepository>
			<id>${custom.repository.anrispublicsnapshots.id}</id>
			<url>${custom.repository.root}${custom.repository.anrispublicsnapshots.path}</url>
		</snapshotRepository>
	</distributionManagement>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.anrisoftware.globalpom</groupId>
				<artifactId>globalpom-groovytestutils</artifactId>
				<version>${project.custom.globalpom.groovytestutils.version}</version>
			</dependency>
			<dependency>
				<groupId>com.anrisoftware.globalpom</groupId>
				<artifactId>globalpom-log</artifactId>
				<version>${project.custom.globalpom.log.version}</version>
			</dependency>
			<dependency>
				<groupId>com.anrisoftware.propertiesutils</groupId>
				<artifactId>propertiesutils</artifactId>
				<version>1.1.2</version>
			</dependency>
			<dependency>
				<groupId>com.anrisoftware.groovybash</groupId>
				<artifactId>groovybash-core</artifactId>
				<version>0.1.1</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<dependency>
			<groupId>args4j</groupId>
			<artifactId>args4j</artifactId>
		</dependency>
		<dependency>
			<groupId>com.google.inject.extensions</groupId>
